{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules"]
}
